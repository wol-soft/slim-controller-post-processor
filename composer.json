{
    "name": "wol-soft/slim-controller-post-processor",
    "homepage": "https://github.com/wol-soft/slim-controller-post-processor",
    "description": "Creates Slim controllers from JSON Schema files based on the JSON Schema Model Generator (https://github.com/wol-soft/php-json-schema-model-generator)",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Enno Woortmann",
            "email": "enno.woortmann@web.de"
        }
    ],
    "require": {
        "slim/slim": "^4.0",

        "wol-soft/php-json-schema-model-generator": "^0.19.0",
        "wol-soft/php-micro-template": "^1.4",

        "plejus/pluralize": "dev-master",

        "php": ">=7.2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.4"
    },
    "autoload": {
        "psr-4": {
            "SlimControllerPostProcessor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlimControllerPostProcessor\\Tests\\": "tests"
        }
    }
}
